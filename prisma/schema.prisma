generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id            Int      @id @default(autoincrement())
  fullname      String
  password      String
  username      String   @unique
  email         String   @unique
  rol           UserRole
  email_confirm Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  irons   Iron[]
  grounds Ground[]
  cattles Cattle[]
}

model Race {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  cattles Cattle[]
}

model Iron {
  id        Int      @id @default(autoincrement())
  name      String
  image     String
  id_user   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user    User     @relation(fields: [id_user], references: [id], onDelete: Cascade, onUpdate: Cascade)
  cattles Cattle[]
}

model Ground {
  id        Int      @id @default(autoincrement())
  name      String
  image     String?
  width     Float
  length    Float
  address   String
  notes     String
  id_user   Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user    User     @relation(fields: [id_user], references: [id], onDelete: Cascade, onUpdate: Cascade)
  cattles Cattle[]
}

model Cattle {
  id          Int    @id @default(autoincrement())
  description String

  fatherInt Int? @map("father") // Renombramos la columna f√≠sica para claridad
  motherInt Int? @map("mother")

  // Relaciones Virtuales
  fatherInfo Cattle? @relation("FatherRelation", fields: [fatherInt], references: [id])
  motherInfo Cattle? @relation("MotherRelation", fields: [motherInt], references: [id])

  // Opuestos (necesarios para Prisma, aunque no los uses)
  childrenAsFather Cattle[] @relation("FatherRelation")
  childrenAsMother Cattle[] @relation("MotherRelation")

  gender                String
  registrationNumber    String
  lotNumber             String
  color                 String
  birthdate             DateTime
  observations          String
  image                 String?
  reason_for_withdrawal String?
  status                Int      @default(1)
  id_iron               Int?
  id_race               Int
  id_user               Int
  id_ground             Int?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  // Relations
  iron   Iron?   @relation(fields: [id_iron], references: [id], onDelete: Cascade, onUpdate: Cascade)
  race   Race    @relation(fields: [id_race], references: [id], onDelete: Cascade, onUpdate: Cascade)
  user   User    @relation(fields: [id_user], references: [id], onDelete: Cascade, onUpdate: Cascade)
  ground Ground? @relation(fields: [id_ground], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
